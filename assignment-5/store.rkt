(provide (all-defined-out))

(define store? gvector?)
(define reference? integer?)

(define empty-store make-gvector)

(define newref!
  (位 (val store) 
    (gvector-add! store val) 
    (gvector-count store)))

(define deref
  (位 (ref store) (gvector-ref store ref)))

(define setref!
  (位 (ref val store) (gvector-set! store ref val)))
